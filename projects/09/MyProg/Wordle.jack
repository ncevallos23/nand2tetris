class Wordle{
    field String ans;

    constructor Wordle new(String word){
        let ans = word;
        do draw();
        return this;
    }

    method void draw() {
        var int row1;
        let row1 = 0;
        do Output.printString("Guess        Hints");
        do Output.println();
        while(row1<6){
            do Output.printString("_ _ _ _ _    _ _ _ _ _");
            do Output.println();
            let row1 = row1+1;
        }
        do Output.moveCursor(21, 0);
        return;
    }

    method void run(){
        var int row;
        var String input;
        var int letter;
        var char curLetter;
        var int letter2;
        var int column;
        var char curAnsLetter;
        var boolean first;

        let column = 0;
        let letter2 = 0;
        let letter = 0;
        let row = 0;
        let first = true;
        
        do Output.moveCursor(21, 0);
        
        let row = 1;
        while(row<7){
            do Output.moveCursor(21, 0);
            do Output.printString("               ");
            do Output.moveCursor(21, 0);
            let input = Keyboard.readLine("Guess: ");
            let letter = 0;
            while (letter < 5){
                let curLetter = input.charAt(letter);
                let column = 2 * letter;
                do Output.moveCursor(row, column);
                do Output.printChar(curLetter);
                let letter2 = 0;
                let first = true;
                while(letter2 < 5){
                    if(ans.charAt(letter2) = curLetter){
                        if (first){
                            let column = column + 13;
                            do Output.moveCursor(row, column);
                            do Output.printString("B");
                            let first = false;
                        }
                    }
                    let letter2 = letter2 + 1;
                }
                let curAnsLetter = ans.charAt(letter);
                if (curLetter = curAnsLetter){
                    do Output.moveCursor(row, column);
                    do Output.printString("A");
                }
                let letter = letter + 1;
            }
            let row = row + 1;
            
        }

        do Output.moveCursor(21, 0);
        do Output.printString("               ");
        
        return;
    }

    method void dispose() {
        do Memory.deAlloc(this);
        return;
     }
}